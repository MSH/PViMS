@{
    ViewBag.Title = "Encounter Search";
    Layout = "~/Views/Shared/_OfflineLayout.cshtml";

    ViewBag.Icon = "fa fa-home fa-fw";
    ViewBag.Heading = "Encounters";
    ViewBag.SubHeading = "View";
    ViewBag.OverrideBreadcrumb = true;
    ViewBag.ClinicalColour = "orange"; ViewBag.AnalyticalColour = "white"; ViewBag.ReportingColour = "white"; ViewBag.PublisherColour = "white"; ViewBag.AdminColour = "white";
}

<div id="encounter-searchresults" class="">

    <div class="row">

        <article class="col-sm-12 col-md-12 col-lg-12">

            <div class="jarviswidget" id="wid-id-1" data-widget-editbutton="false" data-widget-custombutton="false" data-widget-deletebutton="false" data-widget-colorbutton="false">

                <header>
                    <span class="widget-icon"> <i class="fa fa-search"></i> </span>
                    <h2>Encounter Search</h2>
                </header>

                <!-- widget div-->
                <div>

                    <!-- widget edit box -->
                    <div class="jarviswidget-editbox">
                        <!-- This area used as dropdown edit box -->

                    </div>
                    <!-- end widget edit box -->
                    <!-- widget content -->
                    <div class="widget-body no-padding">

                        <div class="well well-sm" style="height:auto; padding-top:10px; padding-left:10px; padding-right:10px; padding-bottom:0px;">

                            <form data-bind="submit: searchEncounters">

                                <div class="row">
                                    <div class="col-sm-3">
                                        <div class="input-group">
                                            <span class="input-group-addon">Patient Id:</span>
                                            <input type="text" id="patientid" class="form-control" data-bind="value: searchParamPatientId" />
                                        </div>
                                    </div>
                                    <div class="col-sm-3">
                                        <div class="input-group">
                                            <span class="input-group-addon">First Name:</span>
                                            <input type="text" id="firstname" class="form-control" data-bind="value: searchParamFirstname" />
                                        </div>
                                    </div>
                                    <div class="col-sm-3">
                                        <div class="input-group">
                                            <span class="input-group-addon">Surname:</span>
                                            <input type="text" id="surname" class="form-control" data-bind="value: searchParamSurname" />
                                        </div>
                                    </div>
                                </div>
                                <div class="pull-right">
                                    <button type="submit" class="btn btn-labeled btn-primary">
                                        <span class="btn-label">
                                            <i class="fa fa-search"></i>
                                        </span>Search
                                    </button>
                                </div>

                            </form>

                        </div>

                        <table class="table table-bordered table-striped table-hover">
                            <thead>
                                <tr>
                                    <th>Patient ID</th>
                                    <th>First Name</th>
                                    <th>Surname</th>
                                    <th>Encounter Type</th>
                                    <th>Encounter Date</th>
                                    <th>Action</th>
                                </tr>
                            </thead>
                            <tbody data-bind="foreach: encounters">
                                <tr>
                                    <td data-bind="text: PatientId"></td>
                                    <td data-bind="text: Patient.PatientFirstName"></td>
                                    <td data-bind="text: Patient.PatientLastName"></td>
                                    <td data-bind="text: $parent.getEncounterTypeById(EncounterType)"></td>
                                    <td data-bind="text: moment(EncounterDate).format('YYYY-MM-DD')"></td>
                                    <td>
                                        <div class="btn-toolbar">
                                            <a class="btn btn-default" data-bind="attr: { href:$parent.createURLParams('ViewEncounterOffline','Encounter',{'encounterId': EncounterId, 'id': PatientId})}">View Encounter</a>
                                        </div>
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                        <div class="alert alert-danger" data-bind="visible: error" style="display:none;">
                            <p data-bind="text: error"></p>
                        </div>
                    </div>
                </div>
            </div>
        </article>
    </div>
</div>

