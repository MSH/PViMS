@model IEnumerable<PVIMS.Web.Models.FacilityListItem>

@{
    ViewBag.Title = "Manage Facilities";
}

@{
	Layout = "~/Views/Shared/_StandardLayout.cshtml";

    ViewBag.Icon = "fa-windows";
	ViewBag.Heading = "Facilities";
    ViewBag.ClinicalCol = "orange"; ViewBag.AnalyticalCol = "white"; ViewBag.ReportingCol = "white"; ViewBag.PublisherCol = "white";
}

@section breadcrumb
{
	<li>Administration</li>
}

    <!-- widget grid -->
    <section id="widget-grid" class="">

        <!-- row -->
        <div class="row">

            <!-- NEW WIDGET START -->
            <article class="col-xs-12 col-sm-12 col-md-12 col-lg-8">

                <!-- Widget ID (each widget will need unique ID)-->
                <div class="jarviswidget well" id="wid-id-0" 
                     data-widget-editbutton="false" 
                     data-widget-custombutton="false" 
                     data-widget-deletebutton="false" 
                     data-widget-colorbutton="false">

                    <header>
                        <span class="widget-icon"> <i class="fa fa-table"></i> </span>
                        <h2>Facilities</h2>
                    </header>

                    <!-- widget div-->
                    <div>

                        <!-- widget edit box -->
                        <div class="jarviswidget-editbox">
                            <!-- This area used as dropdown edit box -->

                        </div>
                        <!-- end widget edit box -->
                        <!-- widget content -->
                        <div class="widget-body no-padding">

                            <div class="widget-body">
                                <div class="well well-sm bg-color-blueLight txt-color-white text-right">
                                    <a href="@Url.Action("AddFacility")" class="btn btn-primary btn-sm">Add New Facility</a>
                                </div>

                                <table class="table table-striped table-bordered table-hover" id="dt_basic">
                                    <thead>
                                        <tr>
                                            <th>
                                                @Html.DisplayNameFor(model => model.FacilityName)
                                            </th>
                                            <th>
                                                @Html.DisplayNameFor(model => model.FacilityCode)
                                            </th>
                                            <th>
                                                @Html.DisplayNameFor(model => model.FacilityType)
                                            </th>
                                            <th>
                                                Actions
                                            </th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var item in Model)
                                        {
                                            <tr>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.FacilityName)
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.FacilityCode)
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.FacilityType)
                                                </td>
                                                <td>
                                                    <div class="btn-group">
                                                        <button data-toggle="dropdown" class="btn btn-default btn-sm dropdown-toggle">
                                                            Action
                                                            <span class="caret"></span>
                                                        </button>
                                                        <ul class="dropdown-menu pull-right">
                                                            <li>
                                                                <a href="@Url.Action("EditFacility", new { FId = item.FacilityId })">Edit Facility</a>
                                                            </li>
                                                            <li>
                                                                <a href="@Url.Action("DeleteFacility", new { FId = item.FacilityId })">Delete Facility</a>
                                                            </li>
                                                        </ul>
                                                    </div>
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>

                            </div>

                        </div>
                        <!-- end widget content -->

                    </div>
                    <!-- end widget div -->

                </div>
                <!-- end widget -->

            </article>
            <!-- WIDGET END -->

        </div>
        <!-- end row -->

    </section>
    <!-- end widget grid -->