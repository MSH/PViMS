@model PVIMS.Web.Models.MetaReportDeleteModel
@{
    ViewBag.Title = "Delete Custom Report";
    Layout = "~/Views/Shared/_StandardLayout.cshtml";
    ViewBag.Icon = "fa-windows";
    ViewBag.Heading = "Custom Report";
    ViewBag.SubHeading = "Delete";
    ViewBag.OverrideBreadcrumb = true;
    ViewBag.ClinicalColour = "white"; ViewBag.AnalyticalColour = "white"; ViewBag.ReportingColour = "orange"; ViewBag.PublisherColour = "white"; ViewBag.AdminColour = "white";
}
@section breadcrumb
{
    <li>Reports</li>
}

<!-- widget grid -->
<div id="widget-grid" class="">
    <div class="row">
        <article class="col-sm-12 col-md-12 col-lg-6">
            <div class="jarviswidget" id="wid-id-1" data-widget-editbutton="false" data-widget-custombutton="false" data-widget-deletebutton="false" data-widget-colorbutton="false">
                <header>
                    <span class="widget-icon"> <i class="fa fa-cogs"></i> </span>
                    <h2>Delete Report (@Model.ReportName)</h2>
                </header>
                <!-- widget div-->
                <div>
                    <div class="widget-body no-padding">
                        <div class="alert alert-danger alert-block">
                            <strong>Please note!</strong> You are about to delete this record. This action is not reversible....
                        </div>

                        @using (Html.BeginForm("DeleteMetaReport", "Reports", FormMethod.Post, new { @class = "smart-form" }))
                        {
                            @Html.AntiForgeryToken()

                            @Html.HiddenFor(model => model.MetaReportId)

                            <header>
                                Basic Details
                            </header>

                            <fieldset>
                                <section>
                                    @Html.LabelFor(model => model.ReportName)
                                    <label class="textarea">
                                        @Html.EditorFor(model => model.ReportName, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly", @style = "background-color:#F1F1F1;" } })
                                    </label>
                                    @Html.ValidationMessageFor(model => model.ReportName, "", new { @class = "text-danger" })
                                </section>
                                <section>
                                    @Html.LabelFor(model => model.ReportDefinition)
                                    <label class="textarea">
                                        @Html.EditorFor(model => model.ReportDefinition, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly", @style = "background-color:#F1F1F1;" } })
                                    </label>
                                    @Html.ValidationMessageFor(model => model.ReportDefinition, "", new { @class = "text-danger" })
                                </section>
                            </fieldset>

                            <footer>
                                <button type="submit" class="btn btn-primary" value="Submit" name="button">
                                    Delete
                                </button>
                                <a href="@Url.Action("CustomiseReport", "Reports", new { metaReportId = Model.MetaReportId })" class="btn btn-default btn-sm">Back</a>
                            </footer>
                        }
                    </div>
                    <!-- end widget content -->
                </div>
                <!-- end widget div -->
            </div>
        </article>
    </div>
    <!-- end row -->
</div>
@section scripts{
    @Scripts.Render("~/bundles/jqueryval")
}
