@model PVIMS.Web.Models.CohortDeleteModel
@{
    ViewBag.Title = "Delete Cohort";
    Layout = "~/Views/Shared/_StandardLayout.cshtml";
    ViewBag.Icon = "fa-cogs";
    ViewBag.Heading = "Cohort";
    ViewBag.SubHeading = "Delete";
    ViewBag.OverrideBreadcrumb = true;
    ViewBag.ClinicalColour = "orange"; ViewBag.AnalyticalColour = "white"; ViewBag.ReportingColour = "white"; ViewBag.PublisherColour = "white"; ViewBag.AdminColour = "white";
}
@section breadcrumb
{
    <li>Cohorts</li>
}

<!-- widget grid -->
<div id="widget-grid" class="">
    <div class="row">
        <article class="col-sm-12 col-md-12 col-lg-6">
            <div class="jarviswidget well" id="wid-id-1" 
                 data-widget-editbutton="false" 
                 data-widget-custombutton="false" 
                 data-widget-deletebutton="false" 
                 data-widget-colorbutton="false">

                <header>
                    <span class="widget-icon"> <i class="fa fa-cogs"></i> </span>
                    <h2>Delete Cohort (@Model.CohortName)</h2>
                </header>
                <!-- widget div-->
                <div>
                    <div class="widget-body no-padding">
                        <div class="alert alert-danger alert-block">
                            <strong>Please note!</strong> You are about to delete this record. This action is not reversible....
                        </div>

                        @using (Html.BeginForm("DeleteAppointment", "Appointment", FormMethod.Post, new { @class = "smart-form" }))
                        {
                            @Html.AntiForgeryToken()

                            if (!ViewData.ModelState.IsValid)
                            {
                                <p class="alert alert-danger">
                                    Please review and correct the errors below.
                                </p>
                            }

                            @Html.HiddenFor(model => model.Cohort)
                            @Html.HiddenFor(model => model.CohortName)

                            <header>
                                Basic Details
                            </header>

                            <fieldset>
                                <section>
                                    @Html.LabelFor(model => model.CohortName)
                                    <label class="textarea">
                                        @Html.EditorFor(model => model.CohortName, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly", @style = "background-color:#F1F1F1;" } })
                                    </label>
                                </section>
                            </fieldset>

                            <footer>
                                <button type="submit" class="btn btn-primary" value="Submit" name="button">
                                    Delete
                                </button>
                                <a href="@ViewBag.ReturnUrl" class="btn btn-default">Back</a>
                            </footer>
                        }
                    </div>
                    <!-- end widget content -->
                </div>
                <!-- end widget div -->
            </div>
        </article>
    </div>
    <!-- end row -->
</div>
@section scripts{
    @Scripts.Render("~/bundles/jqueryval")
}
